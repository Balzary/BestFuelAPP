<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:columnCount="2"
    android:rowCount="6"
    android:useDefaultMargins="true">

    <TextView
        android:id="@+id/gasTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        tools:text="@string/gasPriceName" />


    <TextView
        android:id="@+id/gasPercentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_row="1"
        android:gravity="end|center_vertical"
        android:layout_columnSpan="2"
        android:text="@string/gasPercentage" />

    <SeekBar
        android:id="@+id/gasSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/seekbar_height"
        android:layout_gravity="fill_horizontal"
        android:max="10"
        android:layout_columnSpan="2"
        android:progress="5"
        android:layout_row="1"
        android:layout_column="6" />

    <TextView
        android:id="@+id/etanolTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_columnSpan="2"
        android:text="@string/etanolPriceName" />


    <TextView
        android:id="@+id/etanolPercentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="end|center_vertical"
        android:layout_columnSpan="2"
        android:text="@string/etanolPercentage" />

    <SeekBar
        android:id="@+id/etanolSeekBar2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/seekbar_height"
        android:layout_gravity="fill_horizontal"
        android:max="10"
        android:layout_columnSpan="2"
        android:progress="5" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/optTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/optTextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/optImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="0"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

</GridLayout>